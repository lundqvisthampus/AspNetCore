@model AuthSignUpViewModel
@{
    ViewData["Title"] = "Sign up";
}
<section class="signup-section">
    <div class="container">
        <div class="signup-form">
            <h1 class="header1">Create Account</h1>
            <p class="m-text">Already have an account? <a class="sign-in" asp-controller="Auth" asp-action="SignIn">Sign in here.</a></p>
            <p class="already-exists-error">@ViewData["ErrorMessage"]</p>
            <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate>
                <div class="nameinputs">
                    <div class="firstname">
                        <label asp-for="Form.FirstName"></label>
                        <span asp-validation-for="Form.FirstName"></span>
                        <input asp-for="Form.FirstName" class="userinput">
                    </div>
                    <div class="lastname">
                        <label asp-for="Form.LastName"></label>
                        <span asp-validation-for="Form.LastName"></span>
                        <input asp-for="Form.LastName" class="userinput">
                    </div>
                </div>
                <label asp-for="Form.Email"></label>
                <span asp-validation-for="Form.Email"></span>
                <input asp-for="Form.Email" class="userinput">

                <label asp-for="Form.Password"></label>
                <span asp-validation-for="Form.Password"></span>
                <input asp-for="Form.Password" class="userinput">

                <label asp-for="Form.ConfirmPassword"></label>
                <span asp-validation-for="Form.ConfirmPassword"></span>
                <input asp-for="Form.ConfirmPassword" class="userinput">

                <div class="agreement-signup">
                    <input asp-for="Form.TermsAndConditions">
                    <p>I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a>.</p>
                    <span asp-validation-for="Form.TermsAndConditions"></span>
                    <button type="submit" class="theme-btn">Sign up</button>
                </div>
            </form>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Shared/_ValidationScriptPartial.cshtml")