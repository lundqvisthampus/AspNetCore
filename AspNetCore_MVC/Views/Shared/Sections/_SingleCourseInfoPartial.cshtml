@model SingleCourseViewModel

<div class="course-info">
    <div class="course-desc">
        <h2 class="display6">Course Description</h2>
        <p class="m-text">@Model.Description</p>
        <div class="what-youll-learn">
            <h3 class="header3">What you'll learn</h3>
            @foreach(var item in Model.Learning)
            {
                <p class="m-text"><i class="fa-regular fa-circle-check"></i> @item.Content</p>
            }
        </div>
    </div>
    <div class="course-includes">
        <h4 class="header4">This course includes</h4>
        <p class="m-text"><i class="fa-light fa-tv-retro"></i> @Model.Includes.HoursOfContent hours on-demand video</p>
        <p class="m-text"><i class="fa-light fa-book"></i> @Model.Includes.AmountOfArticles articles</p>
        <p class="m-text"><i class="fa-sharp fa-regular fa-download"></i> @Model.Includes.DownloadableResources downloadable resources</p>

        @if(Model.Includes.LifetimeAccess)
        {
            <p class="m-text"><i class="fa-solid fa-infinity"></i> Full lifetime access</p>
        }
        @if (Model.Includes.Certificate)
        {
            <p class="m-text"><i class="fa-regular fa-trophy"></i> Certificate of completion</p>
        }

        <div class="course-price">
            <p class="header2">$@Model.Includes.Price</p>
            @if(Model.Includes.ReducedPrice != null)
            {
                <p class="xl-text">$@Model.Includes.ReducedPrice</p>
            }
        </div>
        <button class="theme-btn">Join course</button>
    </div>
</div>

<div class="program-details">
    <h2 class="display6">Program Details</h2>
    @for(int i = 0; i < Model.Details.Count; i++)
    {
        <div class="program">
            <img id="programDetailsImg" src="" data-lightsrc="/images/@(i + 1)-program.svg" data-darksrc="/images/@(i + 1)-program-dark.svg" alt="">
            <div class="program-text">
                <p class="lead-text">@Model.Details[i].Title</p>
                <p class="m-text">@Model.Details[i].Description</p>
            </div>
        </div>
    }
</div>