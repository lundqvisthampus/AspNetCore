@model SingleCourseViewModel

<div class="author-info">
    <img class="big-author" src="@Model.Author.AuthorBigImgUrl" alt="Image of author">
    <div class="info-author">
        <img src="/images/lines-blackbkg.png" alt="">
        <div class="author">
            <p class="xl-text">Learn from the best</p>
            <p class="display6">@Model.Author.AuthorName</p>
            <p class="m-text">@Model.Author.AuthorDescription</p>
            <div class="social-btns">
                @if (Model.Author.YoutubeUrl != null && Model.Author.YoutubeSubscribers != null)
                {
                    <a class="theme-btn youtube-btn" href="@Model.Author.YoutubeUrl"><i class="fa-brands fa-youtube" style="color: #FFFFFF;"></i> @Model.Author.YoutubeSubscribers subscribers</a>
                }
                @if (Model.Author.FacebookUrl != null && Model.Author.FacebookSubscribers != null)
                {
                    <a class="theme-btn facebook-btn" href="@Model.Author.FacebookUrl"><i class="fa-brands fa-square-facebook" style="color: #FFFFFF;"></i> @Model.Author.FacebookSubscribers followers</a>
                }
            </div>
        </div>
    </div>
</div>