@inject SignInManager<ApplicationUser> _signInManager

<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.min.css" asp-append-version="true" />
    <title>@ViewData["Title"] - Silicon</title>
</head>
<body class="">
    <div class="wrapper">
        <header class="">
            <div class="container">
                <div class="left-nav">
                    <a asp-controller="Home" asp-action="Index">
                        <img id="logotype" src="/images/logotype.svg" alt="Silicon logotype">
                    </a>
                    @if (_signInManager.IsSignedIn(User))
                    {
                        <div class="nav-links">
                            <a class="navigate-link" asp-controller="Home" asp-action="Index" asp-fragment="showcase">Overview</a>
                            <a class="navigate-link" asp-controller="Courses" asp-action="Index">Courses</a>
                            <a class="navigate-link" asp-controller="Contact" asp-action="Index">Contact</a>
                        </div>
                    }
                    else
                    {
                        <div class="nav-links">
                            <a class="navigate-link" asp-controller="Home" asp-action="Index" asp-fragment="showcase">Overview</a>
                            <a class="navigate-link" asp-controller="Home" asp-action="Index" asp-fragment="features">Features</a>
                            <a class="navigate-link" asp-controller="Contact" asp-action="Index">Contact</a>
                        </div>
                    }
                </div>
                <div class="right-nav">
                    <div class="nav-btns">
                        <p>Light</p>
                        <label class="theme-switch">
                            <input id="darkModeToggle" type="checkbox">
                            <span onclick="toggleDarkMode()" class="slider round"></span>
                        </label>
                        <p>Dark</p>
                        <div class="navbar-buttons">
                            @if (_signInManager.IsSignedIn(User))
                            {
                                <a class="profile-btn" onclick="toggleMenu()" asp-controller="Account" asp-action="Index"><img src="~/images/profile-img.svg" alt="Profile Image link" /></a>
                            }
                            else
                            {
                                <a class="gray-btn" asp-controller="Auth" asp-action="SignIn"><i class="fa-regular fa-right-to-bracket"></i>Sign In</a>
                                <a class="theme-btn" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i>Sign Up</a>
                            }
                        </div>
                    </div>
                    <button onclick="toggleMenu()" class="menu-burger">
                        <i class="fa-regular fa-bars" style="color: #33354D;"></i>
                    </button>
                </div>
            </div>
            <div id="menu" class="mobile-menu container hide">
                @if (_signInManager.IsSignedIn(User))
                {
                    if (ShowProfileBtn())
                    {
                        <a class="profile-btn" onclick="toggleMenu()" asp-controller="Account" asp-action="Index"><img src="~/images/profile-img.svg" alt="Profile Image link" /></a>
                    }
                }
                else
                {
                    <a class="gray-btn" onclick="toggleMenu()" asp-controller="Auth" asp-action="SignIn"><i class="fa-regular fa-right-to-bracket"></i>Sign In</a>
                    <a class="theme-btn" onclick="toggleMenu()" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i>Sign Up</a>
                }
                <a class="link" onclick="toggleMenu()" asp-controller="Home" asp-action="Index" asp-fragment="showcase">Overview</a>
                <a class="link" onclick="toggleMenu()" asp-controller="Home" asp-action="Index" asp-fragment="features">Features</a>
                <a class="link" onclick="toggleMenu()" asp-controller="Contact" asp-action="Index">Contact</a>
                <button id="mobile-darkmode" onclick="toggleDarkMode()"><i class="fa-solid fa-moon-over-sun"></i></button>
            </div>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            <div class="container">
                @if(!ContentHidden())
                {
                    <div class="social-media">
                        <a href="#"><i class="fa-brands fa-square-facebook"></i></a>
                        <a href="#"><i class="fa-brands fa-square-x-twitter"></i></a>
                        <a href="#"><i class="fa-brands fa-square-instagram"></i></a>
                        <a href="#"><i class="fa-brands fa-square-youtube"></i></a>
                    </div>
                }
                <div class="footer-text">
                    <p>&#169; @DateTime.Now.Year Silicon. All rights reserved. <span>Pulvinar urna condimentum amet tempor, ornare integer. Lorem odio justo malesuada suspendisse viverra aliquet quisque turpis non. Feugiat in odio non nunc ornare consectetur.</span></p>
                </div>
            </div>
        </footer>
    </div>
    <script src="/js/site.js" asp-append-version="true"></script>
</body>
</html>


@{
    bool ContentHidden()
    {
        var controller = ViewContext.RouteData.Values["controller"] as string;

        if (controller == "Auth")
        {
            return true; 
        }

        return false; 
    }
}

@{
    bool ShowProfileBtn()
    {
        var controller = ViewContext.RouteData.Values["controller"] as string;

        if (controller != "Account")
        {
            return true;
        }

        return false;
    }
}