@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = (themeMode == "dark") ? true : false;
}

<div class="error-section">
    <div class="container">
        <img id="errorImg" src="~/images/@(isDark ? "error-404-darkmode.svg" : "error-404.svg")" alt="Error-404 Image">
        <h1 class="display5">Ooops!</h1>
        <p class="xl-text">The page you are looking for is not available.</p>
        <a class="theme-btn" asp-controller="Home" asp-action="Index"><i class="fa-regular fa-house" style="color: #FFFFFF;"></i>Go to homepage</a>
    </div>
</div>